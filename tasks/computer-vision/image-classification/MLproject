name: Super_Res

conda_env: conda.yaml

entry_points:
  train:
    parameters:
      objective_function: {type: string, default: 'categorical_crossentropy'}
      learning_rate: {type: float, default: 0.01}
      momentum: {type: float, default: 0.9}
      decay: {type: float, default: 1e-6}
      early_stop_patience: {type: int, default: 3}
      steps_per_epoch: {type: int, default: 400}
      batch_size: {type: int, default: 30}
      epochs: {type: int, default: 15}
      validation_path: {type: string}
      training_path: {type: string}
      model_name: {type: string}
    command: "python train.py --objective_function {data_path} \
      --learning_rate {learning_rate} --momentum {momentum} --decay {decay}\
      --early_stop_patience {early_stop_patience} --batch_size {batch_size}\
      --steps_per_epoch {steps_per_epoch} --epochs {epochs}\
      --validation_path {validation_path} --training_path {training_path}\
      --model_name {model_name}"

  classify:
    parameters:
      model_name: {type: string}
      path_to_image: {type: string}
    command: "python classify.py --model_name {model_name} --path_to_image {path_to_image}"
